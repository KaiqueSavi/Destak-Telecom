---
interface Props {
   href: string,
   image: string, 
   tittle: string
}

const { href, image, tittle } = Astro.props;
---

<a href={href} target="_blank">
    <div class="w-72 h-52 bg-gradient-to-br hover:-translate-y-1 transition-all duration-500 from-[#00c3ff71] to-[#99999938] rounded-xl mt-12 flex flex-col justify-around items-center">
        <img class="h-16" src={image} alt="">
        <h2 class="text-white text-xl text-center">{tittle}</h2>
    </div>
</a>
